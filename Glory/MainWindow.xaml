<Window x:Class="Glory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Glory"
        mc:Ignorable="d"
        Title="Minimalist RTS" Height="450" Width="800">
    <Grid Margin="0,0,2,1"
          Background="DarkGray">
        <StackPanel Margin="10, 10, 0, 0" HorizontalAlignment="Left">
            <TextBlock>Resources:</TextBlock>
            <TextBlock Foreground="Black" HorizontalAlignment="Left" Margin="10,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
                <Run>Gold: </Run>
                <Run Text="{Binding Path=GoldCount, Mode=OneWay}"></Run>
            </TextBlock>
            <TextBlock Foreground="Black" HorizontalAlignment="Left" Margin="10,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
                <Run>Gold Max: </Run>
                <Run Text="{Binding Path=GoldMax, Mode=OneWay}"></Run>
            </TextBlock>
            <TextBlock Margin="0,20,0,0" >Upgrades:</TextBlock>
            <StackPanel Margin="10,5,0,0" Orientation="Horizontal">
                <TextBlock>Buy 500 Max Gold:</TextBlock>
                <Button Margin="10,0,0,0" Click="Button_Click">
                    <TextBlock>
                        <Run>Cost: </Run>
                        <Run Text="{Binding Path=GoldMaxUpgradeCost, Mode=OneWay}"></Run>
                    </TextBlock>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
