<Window x:Class="Glory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Glory"
        mc:Ignorable="d"
        Title="Minimalist RTS" Height="450" Width="800">
    <Grid Margin="0,0,2,1"
          Background="DarkGray">
        <StackPanel Margin="10, 10, 0, 0">
            <TextBlock>Resources:</TextBlock>
            <TextBlock Foreground="Black" HorizontalAlignment="Left" Margin="10,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
                <Run>Glory: </Run>
                <Run Text="{Binding Path=GloryCount, Mode=OneWay}"></Run>
            </TextBlock>
            <TextBlock Foreground="Black" HorizontalAlignment="Left" Margin="10,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
                <Run>Message: </Run>
                <Run Text="{Binding Path=Message, Mode=OneWay}"></Run>
            </TextBlock>
        </StackPanel>

    </Grid>
</Window>
